<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <servlet>
        <servlet-name>ProductListServlet</servlet-name>
        <servlet-class>shopping.servlet.ProductListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductListServlet</servlet-name>
        <url-pattern>/listProduct</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>shopping.servlet.UserLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderItemAddServlet</servlet-name>
        <servlet-class>shopping.servlet.OrderItemAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderItemAddServlet</servlet-name>
        <url-pattern>/addOrderItem</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>OrderItemListServlet</servlet-name>
        <servlet-class>shopping.servlet.OrderItemListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderItemListServlet</servlet-name>
        <url-pattern>/listOrderItem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderCreateServlet</servlet-name>
        <servlet-class>shopping.servlet.OrderCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderCreateServlet</servlet-name>
        <url-pattern>/createOrder</url-pattern>
    </servlet-mapping>
</web-app>
